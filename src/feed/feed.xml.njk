---
permalink: /feed/feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="{{ metadata.language }}">
  <title>{{ metadata.title }}</title>
  <subtitle>{{ metadata.description }}</subtitle>
  <link href="{{ '/feed/feed.xml' | absoluteUrl(metadata.url) }}" rel="self"/>
  <link href="{{ '/' | absoluteUrl(metadata.url) }}"/>
  <id>{{ '/' | absoluteUrl(metadata.url) }}</id>
  <updated>{% if collections.posts[0] %}{{ collections.posts[0].date | isoDate }}{% else %}{{ 'now' | isoDate }}{% endif %}</updated>
  <author><name>{{ metadata.author }}</name></author>
  {% for post in collections.posts %}
  <entry>
    <title>{{ post.data.title }}</title>
    <link href="{{ post.url | absoluteUrl(metadata.url) }}"/>
    <id>{{ post.url | absoluteUrl(metadata.url) }}</id>
    <updated>{{ post.date | isoDate }}</updated>
    <summary>{{ post.data.description or '' }}</summary>
  </entry>
  {% endfor %}
</feed>
