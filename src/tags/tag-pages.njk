---
layout: layouts/base.njk
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: "/tags/{{ tag | slugify }}/index.html"
---
{% import "partials/apollo-posts.njk" as apollo %}
{{ apollo.pageHeader("Tag: " + tag) }}
<main class="post-list tag-list">
  <ul>
    {% for post in collections.posts %}
    {% if post.data.tags and (tag in post.data.tags) %}
    <li class="list-item">
      <section>
        <div class="post-header">
          <time>{{ post.date | readableDate("yyyy-LL-dd") }}</time>
          <div>
            <h1 class="title"><a href="{{ post.url }}">{{ post.data.title }}</a></h1>
            {% if post.data.description %}
            <div class="meta">
              <div class="description">{{ post.data.description }}</div>
              <a class="readmore" href="{{ post.url }}">Read more ‚ü∂</a>
            </div>
            {% endif %}
          </div>
        </div>
      </section>
    </li>
    {% endif %}
    {% endfor %}
  </ul>
</main>
